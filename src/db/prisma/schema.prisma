// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id        Int     @id @default(autoincrement())
  title     String?
  published Int?
  authorId  Int?
  author    Author? @relation(fields: [authorId], references: [id])
}

model Author {
  id    Int     @id @default(autoincrement())
  name  String?
  books Book[]
}
